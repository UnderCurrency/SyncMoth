<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConaMoth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_state_gray_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/active</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.ConaMoth.TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ConaMoth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ConaMoth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ConaMoth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/dark_state_gray_2</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>



    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.ConaMoth.Fullscreen" parent="Theme.ConaMoth">
        <item name="android:actionBarStyle">@style/Widget.Theme.ConaMoth.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="ThemeOverlay.ConaMoth.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/xanadu</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>


</resources>